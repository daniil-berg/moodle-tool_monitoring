{{!
    @template tool_monitoring/overview

    Render overview of all metrics.

    Example context (json):
    {
        "metrics": [
            {
                "component": "local_plugin",
                "name": "foo",
                "type": "gauge",
                "description": "number of foos",
                "config_url": "http://moodle.org/admin/tool/monitoring/configure.php?metric=local_plugin_foo",
                "tags": [
                    {
                        "id": 1,
                        "name": "Cat",
                        "view_url": "http://moodle.org/admin/tool/monitoring/?tag=Cat"
                    },
                    {
                        "id" :1,
                        "name": "Dog",
                        "view_url": "http://moodle.org/admin/tool/monitoring/?tag=Dog"
                    },
                    {
                        "id": 1,
                        "name": "Mouse",
                        "view_url": "http://moodle.org/admin/tool/monitoring/?tag=Mouse"
                    }
                ]
            }
        ],
        "is_tagging_enabled": true,
        "manage_tags_url": "http://moodle.org/tag/manage.php?tc=14",
        "has_tags": true,
        "all_metrics_url": "http://moodle.org/admin/tool/monitoring/",
        "tags": [
            {
                "name": "Cat",
                "remove_url": "http://moodle.org/admin/tool/monitoring/",
                "edit_url": "http://moodle.org//tag/edit.php?id=42"
            }
        ]
    }
}}

<h2>
    {{#str}} metricsoverview, tool_monitoring {{/str}}
</h2>

{{#has_tags}}
    <div class="mt-3">
        {{#str}} tagfilter, tool_monitoring {{/str}}
        {{#tags}}
            <a href="{{remove_url}}" class="badge bg-secondary text-dark" style="font-size: 100%;"><span aria-hidden="true">Ã— </span> {{name}}</a>
        {{/tags}}
    </div>
    <div class="text-right mb-3">
        <a href="{{all_metrics_url}}">{{#str}} metricsoverviewshowall, tool_monitoring {{/str}}</a>
    </div>
{{/has_tags}}

<table class="table table-sm table-hover">
  <thead>
    <tr>
      <th scope="col">{{#str}} component, tool_monitoring {{/str}}</th>
      <th scope="col">{{#str}} name, tool_monitoring {{/str}}</th>
      <th scope="col">{{#str}} type, tool_monitoring {{/str}}</th>
      <th scope="col">{{#str}} description, tool_monitoring {{/str}}</th>
      {{#is_tagging_enabled}}
        <th scope="col">{{#str}} tags, tool_monitoring {{/str}}</th>
      {{/is_tagging_enabled}}
      <th scope="col">{{#str}} actions, tool_monitoring {{/str}}</th>
    </tr>
  </thead>
  <tbody>
    {{#metrics}}
      <tr>
        <td>{{component}}</td>
        <td>{{name}}</td>
        <td>{{type}}</td>
        <td>{{description}}</td>
        {{#is_tagging_enabled}}
          <td>
            {{#tags}}
              <a href="{{view_url}}" class="badge bg-info text-white">{{name}}</a>
            {{/tags}}
          </td>
        {{/is_tagging_enabled}}
        <td><a href="{{{config_url}}}">{{#str}} edit, tool_monitoring {{/str}}</a></td>
      </tr>
    {{/metrics}}
  </tbody>
</table>

{{#is_tagging_enabled}}
    <div class="my-5 text-right">
        {{#tags}}
            <a href="{{edit_url}}" class="btn btn-secondary">{{#str}} edit_tag, tool_monitoring, {{name}} {{/str}}</a>
        {{/tags}}
        <a href="{{manage_tags_url}}" class="btn btn-secondary">{{#str}} manage_tags, tool_monitoring {{/str}}</a>
    </div>
{{/is_tagging_enabled}}