{{!
    @template tool_monitoring/overview

    Render overview of all metrics.

    Example context (json):
    {
        "metrics": [
            {
                "component": "local_plugin",
                "name": "foo",
                "type": "gauge",
                "description": "number of foos",
                "configurl": "/admin/tool/monitoring/configure.php?metric=local_plugin_foo",
                "tags": [
                    {"id":1,"name":"Cats","viewurl":"http://moodle.org/tag/index.php?tag=Cats"},
                    {"id":1,"name":"Dogs","viewurl":"http://moodle.org/tag/index.php?tag=Dogs"},
                    {"id":1,"name":"Mice","viewurl":"http://moodle.org/tag/index.php?tag=Mice"}
                ]
            }
        ],
        "tagsenabled": true
    }
}}

<h2>{{#str}} metricsoverview, tool_monitoring {{/str}}</h2>

<table class="table table-sm table-hover">
  <thead>
    <tr>
      <th scope="col">{{#str}} component, tool_monitoring {{/str}}</th>
      <th scope="col">{{#str}} name, tool_monitoring {{/str}}</th>
      <th scope="col">{{#str}} type, tool_monitoring {{/str}}</th>
      <th scope="col">{{#str}} description, tool_monitoring {{/str}}</th>
      {{#tagsenabled}}
        <th scope="col">{{#str}} tags, tool_monitoring {{/str}}</th>
      {{/tagsenabled}}
      <th scope="col">{{#str}} actions, tool_monitoring {{/str}}</th>
    </tr>
  </thead>
  <tbody>
    {{#metrics}}
      <tr>
        <td>{{component}}</td>
        <td>{{name}}</td>
        <td>{{type}}</td>
        <td>{{description}}</td>
        {{#tagsenabled}}
          <td>{{#tags}}<a href="{{viewurl}}" class="badge bg-info text-white">{{name}}</a>{{/tags}}</td>
        {{/tagsenabled}}
        <td><a href="{{{configurl}}}">{{#str}} edit, tool_monitoring {{/str}}</a></td>
      </tr>
    {{/metrics}}
  </tbody>
</table>

{{#tagsenabled}}
    <div class="my-5 text-right">
        <a href="{{managetagsurl}}" class="btn btn-secondary">{{#str}} manage_tags, tool_monitoring {{/str}}</a>
    </div>
{{/tagsenabled}}