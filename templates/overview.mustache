{{!
    @template tool_monitoring/overview

    Render overview of all metrics.

    Example context (json):
    {
        "metrics": [
            {
                "component": "local_plugin",
                "name": "foo",
                "type": "gauge",
                "description": "number of foos",
                "configurl": "/admin/tool/monitoring/configure.php?metric=local_plugin_foo"
            }
        ]
    }
}}

<h2>{{#str}} settings:metric_overview, tool_monitoring {{/str}}</h2>

<table class="table table-sm table-hover">
  <thead>
    <tr>
      <th scope="col">{{#str}} settings:component, tool_monitoring {{/str}}</th>
      <th scope="col">{{#str}} settings:name, tool_monitoring {{/str}}</th>
      <th scope="col">{{#str}} settings:type, tool_monitoring {{/str}}</th>
      <th scope="col">{{#str}} settings:description, tool_monitoring {{/str}}</th>
      <th scope="col">{{#str}} settings:actions, tool_monitoring {{/str}}</th>
    </tr>
  </thead>
  <tbody>
    {{#metrics}}
      <tr>
        <td>{{component}}</td>
        <td>{{name}}</td>
        <td>{{type}}</td>
        <td>{{description}}</td>
        <td><a href="{{{configurl}}}">{{#str}} action:edit, tool_monitoring {{/str}}</a></td>
      </tr>
    {{/metrics}}
  </tbody>
</table>
