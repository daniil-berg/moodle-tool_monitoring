{{!
    @template tool_monitoring/overview

    Render overview of all metrics.

    Example context (json):
    {
        "metrics": [
            {
                "name": "foo",
                "type": "gauge",
                "description": "counting foos"
            }
        ]
    }
}}

<h2>{{#str}} metricsoverview, tool_monitoring {{/str}}</h2>

<table class="table table-sm table-hover">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Type</th>
      <th scope="col">Description</th>
    </tr>
  </thead>
  <tbody>
    {{#metrics}}
      <tr>
        <td>{{name}}</td>
        <td>{{type}}</td>
        <td>{{description}}</td>
      </tr>
    {{/metrics}}
  </tbody>
</table>