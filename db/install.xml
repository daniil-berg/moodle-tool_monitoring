<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="admin/tool/monitoring/db" VERSION="20251118" COMMENT="XMLDB file for Moodle admin/tool/monitoring/db"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="../../../../lib/xmldb/xmldb.xsd"
>
    <TABLES>
        <TABLE NAME="tool_monitoring_metrics" COMMENT="All registered metrics and their configuration.">
            <FIELDS>
                <FIELD NAME="id" SEQUENCE="true" TYPE="int" LENGTH="10" NOTNULL="true"/>
                <FIELD NAME="component" SEQUENCE="false" TYPE="char" LENGTH="100" NOTNULL="true" COMMENT="Moodle component defining the metric."/>
                <FIELD NAME="name" SEQUENCE="false" TYPE="char" LENGTH="100" NOTNULL="true" COMMENT="Name of the metric."/>
                <FIELD NAME="enabled" SEQUENCE="false" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" COMMENT="0 if the metric is disabled, i.e. not included in any export."/>
                <FIELD NAME="config" SEQUENCE="false" TYPE="text" NOTNULL="false" COMMENT="JSON encoded metric-specific config, if defined by the metric."/>
                <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Unix timestamp from when the entry was created."/>
                <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Unix timestamp from when the entry was last updated."/>
                <FIELD NAME="usermodified" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="ID of the user who last modified the entry."/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
                <KEY NAME="usermodified" TYPE="foreign" FIELDS="usermodified" REFTABLE="user" REFFIELDS="id"/>
            </KEYS>
            <INDEXES>
                <INDEX NAME="component" UNIQUE="false" FIELDS="component"/>
                <INDEX NAME="name" UNIQUE="false" FIELDS="name"/>
                <INDEX NAME="component_name" UNIQUE="true" FIELDS="component,name"/>
            </INDEXES>
        </TABLE>
    </TABLES>
</XMLDB>
